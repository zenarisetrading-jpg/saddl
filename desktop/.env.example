# ============================================================================
# SADDL AdPulse - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/ppc_suite
SUPABASE_DB_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
SUPABASE_URL=https://[PROJECT].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================
# For Gmail: Use App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@saddl.io

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Base URL for the application (used in invitation links)
# Local development: http://localhost:8501
# Production: https://app.saddl.io
APP_URL=http://localhost:8501

# ============================================================================
# API KEYS
# ============================================================================
RAINFOREST_API_KEY=your-rainforest-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# These flags control gradual rollout of new features
# Set to 'true' to enable, 'false' to disable
# Default values are safe for production (minimal change)

# Phase 1: Email Invitations
# When true: New users receive email invitations with secure links
# When false: Legacy manual password generation (admin sees temp password)
# Default: false (enable after testing email deliverability)
ENABLE_EMAIL_INVITATIONS=false

# Phase 3: Onboarding Wizard
# When true: New users see 3-step welcome wizard after account creation
# When false: New users go directly to dashboard
# Default: false (enable after invitation system is stable)
ENABLE_ONBOARDING_WIZARD=false

# Phase 4: Enhanced Empty States
# When true: Show styled empty state guidance with glassmorphic design
# When false: Show minimal placeholder messages
# Default: true (low risk, improves UX immediately)
ENABLE_ENHANCED_EMPTY_STATES=true

# ============================================================================
# INVITATION SETTINGS
# ============================================================================
# How long invitation tokens remain valid (in days)
INVITATION_EXPIRY_DAYS=7

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Session timeout in minutes (0 = no timeout)
SESSION_TIMEOUT_MINUTES=480

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true

# ============================================================================
# LOGGING
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Set to true for verbose debugging output
DEBUG_MODE=false
